
	<div class="col-xs-3">
		<div class="form_create">
		<h2>User info</h2>
			<table class="table">
				<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
				<tbody>
					<tr>
						<th>name</th>
						<th><%= @user.username %></th>
					</tr>
					<tr>
						<th>introduction</th>
						<th><%= @user.comment %></th>
					</tr>
				</tbody>
			</table>
			<% if @user.id == current_user.id %>
			<%= link_to "" , edit_user_path(current_user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_#{@user.id}" %>
			<%end%>
		<div class="action row"></div>

		<h2>New book</h2>
		<% @book.errors.full_messages.each do |message| %>
    	<%= message %>
    	<%end%>
		<%= form_for(@book) do |f| %>
		<div class="action row">
			<label>Title</label>
			<%= f.text_field :title, class: "col-xs-12 book_title"%>
		
		</div>
		<div class="action row">
			<label>Opinion</label>
			<%= f.text_area :body,  class: "col-xs-12 book_body"%>
		</div>
		
		<div class="action row before">
			<%= f.submit "Create Book" , class: "btn btn-primary col-xs-12"%>
		</div>
		<% end %>
	</div>
	</div>
